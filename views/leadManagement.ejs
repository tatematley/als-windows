    <label><b>Lead Information</b></label>
    <br><br>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Method Obtained</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Notes</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < leads.length; i++) { %>
                <tr>
                    <td><%= leads[i].lead_first_name %></td>
                    <td><%= leads[i].lead_last_name %></td>
                    <td><%= leads[i].lead_street_address %></td>
                    <td><%= leads[i].lead_city %></td>
                    <td><%= leads[i].lead_state %></td>
                    <td><%= leads[i].method_obtained %></td>
                    <td><%= leads[i].lead_phone %></td>
                    <td><%= leads[i].lead_email %></td>
                    <td><%= leads[i].lead_notes %></td>
                    <td>
                        <form action="/deleteLead/<%= leads[i].lead_id %>" method="POST">
                            <button style="display:block; margin:0 auto;" class="man_button" type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                        </form>
                    </td>
                    <td>
                        <form action="/editLead/<%= leads[i].lead_id %>" method="GET">
                            <button style="display:block; margin:0 auto;" class="man_button" type="submit">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form action="/confirmLead/<%= leads[i].lead_id %>" method="GET">
                            <button style="display:block; margin:0 auto;" class="man_button" type="submit">Confirm Customer</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <% if (noResults) { %>
        <div class="alert text-center mt-3" role="alert">No leads found.</div>
    <% } %>

    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>">Previous</a>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>
        <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>">Next</a>
        <% } %>
    </div>
    <form action="/addLead" method="GET">
        <button class="man_button" type="submit">Add Lead</button>
    </form>
    </div>
</div>
</body>
</html>

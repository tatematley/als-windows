        /* Desktop defaults (unchanged look) */
.emp_container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.emp_container .text { padding-left: 20px; }

/* IMPORTANT: scope to employee photos only */
.emp_container img {
  width: 350px;
  height: 350px;
  object-fit: cover;
  object-position: top;
}

/* (optional) your card style */
.card {
  padding: 20px;
  border-radius: 0;
  box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

/* Hero image block (unchanged) */
.image-overlay-container {
  position: relative;
  width: 100%;
  height: 290px;
  overflow: hidden;
}
.overlay-image { width: 100%; height: 100%; object-fit: cover; display: block; }
.overlay {
  position: absolute; inset: 0;
  background: rgba(134,134,134,0.3);
  z-index: 1;
}

/* Desktop: Alex = text first, photo second */
.alex .text  { order: 1; }
.alex .photo { order: 2; }

/* Desktop: Max already photo then text (default order) */

/* Mobile: stack, image first for both */
@media (max-width: 768px) {
  .emp_container {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 14px;
    padding: 16px;
  }
  .emp_container .text { padding-left: 0; }
  .emp_container .photo { order: 1; }
  .emp_container .text  { order: 2; }

  .emp_container img {
    width: 100%;
    max-width: 320px;
    height: auto;
    padding-left: 0 !important;
  }

  .image-overlay-container { height: clamp(220px, 35vh, 320px); }
}


